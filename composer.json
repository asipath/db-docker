{
    "name": "axelerant/db-docker",
    "description": "Support tools for Database as docker images.",
    "type": "composer-plugin",
    "license": "MIT",
    "require": {
        "composer-plugin-api": "^1.1 || ^2.0",
        "cypresslab/gitelephant": "^4.1"
    },
    "autoload": {
        "psr-4": {
            "Axelerant\\DbDocker\\": "src/"
        }
    },
    "extra": {
        "class": "Axelerant\\DbDocker\\Plugin",
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "authors": [
        {
            "name": "AS",
            "email": "raasampath@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "require-dev": {
        "composer/composer": "^2.0",
        "overtrue/phplint": "^4.0",
        "phpspec/prophecy": "^1.12",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "scripts": {
        "lint": "phplint --no-cache src/ --exclude=vendor vendor2",
		"phpcbf": "phpcbf  --standard=PSR12  src/ --ignore=*/vendor/* */vendor2/*",
        "phpcs": "phpcs --standard=PSR12  --exclude=Generic.Files.LineLength,Generic.WhiteSpace.DisallowSpaceIndent,Generic.WhiteSpace.ScopeIndent,PEAR.WhiteSpace.ScopeIndent,Generic.Functions.FunctionCallArgumentSpacing,PSR1.Files.SideEffects --tab-width=3 src/ tests/ --ignore=*/vendor/* */vendor2/*",
        "test": "phpunit tests/"
    }
}
