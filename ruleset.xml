<?xml version="1.0"?>
<ruleset name="Selective Standard">

 <!--
    Use an external tool only when checking coding standards
    and not while fixing a file.
 -->


 <!--
    Exclude some files from being fixed.
 -->
 <exclude-pattern phpcbf-only="true">*/vendor/*</exclude-pattern>
 <exclude-pattern phpcf-only="true">*/vendor/*</exclude-pattern>

 <rule ref="Generic.Files.LineLength">
  <properties>
   <property phpcs-only="true" name="lineLimit" value="300"/>
   <property phpcbf-only="true" name="lineLimit" value="320"/>
  </properties>
 </rule>

</ruleset>